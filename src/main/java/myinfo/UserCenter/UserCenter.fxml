<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="myinfo.UserCenter.UserCenter"
            prefHeight="400.0" prefWidth="600.0">
    <GridPane fx:id="gridPane" alignment="center" hgap="10" vgap="10" AnchorPane.leftAnchor="140" AnchorPane.topAnchor="50">
        <Label text="QQ：" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label fx:id="QQLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Label text="用户等级：" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <Label fx:id="LevelLabel" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="姓名-职位：" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <Label fx:id="NoteLabel" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="密码修改：" GridPane.columnIndex="0" GridPane.rowIndex="12"/>
        <PasswordField fx:id="PasswordChange" GridPane.columnIndex="1" GridPane.rowIndex="12"/>
        <Label text="密码确认：" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
        <PasswordField fx:id="PasswordChangeConfirm" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
        <HBox  spacing="10" alignment="bottom_right" GridPane.columnIndex="1" GridPane.rowIndex="14">
            <Button text="修改密码" fx:id="ChangeButton" prefWidth="100.0" onAction="#Change"/>
        </HBox>
    </GridPane>
</AnchorPane>
